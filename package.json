{
	"author": {
		"name": "Oscar Palm√©r",
		"url": "https://oscarpalmer.se"
	},
	"dependencies": {
		"@oscarpalmer/timer": "^0.12"
	},
	"description": "A collection of web components.",
	"devDependencies": {
		"@tsconfig/recommended": "^1.0",
		"@types/node": "^18.16",
		"@typescript-eslint/eslint-plugin": "^5.59",
		"@typescript-eslint/parser": "^5.59",
		"esbuild": "^0.17",
		"eslint": "^8.39",
		"eslint-config-xo": "^0.43",
		"eslint-config-xo-typescript": "^0.57",
		"typescript": "^5.0"
	},
	"exports": {
		".": {
			"script": "./dist/iife/index.js",
			"module": "./dist/esm/index.js",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/iife/index.js"
		},
		"./accordion": {
			"script": "./dist/iife/accordion.js",
			"module": "./dist/esm/accordion.js",
			"import": "./dist/esm/accordion.js",
			"require": "./dist/cjs/accordion.js",
			"default": "./dist/iife/accordion.js"
		},
		"./details": {
			"script": "./dist/iife/index.js",
			"module": "./dist/esm/index.js",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/iife/index.js"
		},
		"./focus-trap": {
			"script": "./dist/iife/focus-trap.js",
			"module": "./dist/esm/focus-trap.js",
			"import": "./dist/esm/focus-trap.js",
			"require": "./dist/cjs/focus-trap.js",
			"default": "./dist/iife/focus-trap.js"
		},
		"./popover": {
			"script": "./dist/iife/popover.js",
			"module": "./dist/esm/popover.js",
			"import": "./dist/esm/popover.js",
			"require": "./dist/cjs/popover.js",
			"default": "./dist/iife/popover.js"
		},
		"./splitter": {
			"script": "./dist/iife/splitter.js",
			"module": "./dist/esm/splitter.js",
			"import": "./dist/esm/splitter.js",
			"require": "./dist/cjs/splitter.js",
			"default": "./dist/iife/splitter.js"
		},
		"./switch": {
			"script": "./dist/iife/switch.js",
			"module": "./dist/esm/switch.js",
			"import": "./dist/esm/switch.js",
			"require": "./dist/cjs/switch.js",
			"default": "./dist/iife/switch.js"
		},
		"./tooltip": {
			"script": "./dist/iife/tooltip.js",
			"module": "./dist/esm/tooltip.js",
			"import": "./dist/esm/tooltip.js",
			"require": "./dist/cjs/tooltip.js",
			"default": "./dist/iife/tooltip.js"
		}
	},
	"files": ["dist"],
	"jsdelivr": "dist/iife/index.js",
	"keywords": [
		"component",
		"components",
		"frontend",
		"progressive enhancement",
		"web component",
		"web components"
	],
	"license": "MIT",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"name": "@oscarpalmer/components",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/components.git"
	},
	"scripts": {
		"build": "npm run build:cjs; npm run build:esm; npm run build:iife",
		"build:cjs": "zsh -c 'esbuild ./src/**/*.ts --bundle --format=cjs --outdir=dist/cjs --platform=neutral --target=es2017'",
		"build:esm": "zsh -c 'esbuild ./src/**/*.ts --bundle --format=esm --outdir=dist/esm --platform=neutral --target=esnext'",
		"build:iife": "zsh -c 'esbuild ./src/**/*.ts --bundle --minify --format=iife --outdir=dist/iife --platform=neutral --target=es2017'",
		"watch": "esbuild ./src/index.ts --bundle --sourcemap --watch --format=esm --outfile=dist/esm/index.js --platform=neutral --target=esnext"
	},
	"type": "module",
	"unpkg": "dist/iife/index.js",
	"version": "0.17.0"
}
