{
	"author": {
		"name": "Oscar Palm√©r",
		"url": "https://oscarpalmer.se"
	},
	"description": "A collection of web components.",
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.0",
		"@types/node": "^18.8.0",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"esbuild": "^0.15.0",
		"eslint": "^8.25.0",
		"eslint-config-xo": "^0.42.0",
		"eslint-config-xo-typescript": "^0.53.0",
		"typescript": "^4.8.0"
	},
	"exports": {
		".": {
			"script": "./dist/iife/index.js",
			"module": "./dist/esm/index.js",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/iife/index.js"
		}
	},
	"files": ["dist", "src"],
	"jsdelivr": "dist/iife//index.js",
	"keywords": [
		"component",
		"components",
		"frontend",
		"progressive enhancement",
		"web component",
		"web components"
	],
	"license": "MIT",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"name": "@oscarpalmer/components",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/components.git"
	},
	"scripts": {
		"build": "npm run build:cjs; npm run build:esm; npm run build:iife",
		"build:cjs": "zsh -c 'esbuild ./src/**/*.ts --bundle --minify --format=cjs --outdir=dist/cjs --target=es2017'",
		"build:esm": "zsh -c 'esbuild ./src/**/*.ts --bundle --minify --format=esm --outdir=dist/esm --target=esnext'",
		"build:iife": "zsh -c 'esbuild ./src/**/*.ts --bundle --minify --format=iife --outdir=dist/iife --target=es2017'",
		"watch": "esbuild ./src/index.ts --bundle --sourcemap --watch --format=esm --outfile=dist/esm/index.js --target=esnext"
	},
	"type": "module",
	"unpkg": "dist/iife/index.js",
	"version": "0.6.0"
}
